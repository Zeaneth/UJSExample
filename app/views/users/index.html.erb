<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= form_for(:user_filter) do |f|%>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :last_name, "Apellido" %>
<%= f.text_field :last_name %>

<%= f.label :age, "Edad" %>
<%= f.number_field :age %>

<%= f.label :weight, "Peso" %>
<%= f.number_field :weight %>

<%= f.submit "Filtrar" %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.age %></td>
        <td><%= user.weight %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
